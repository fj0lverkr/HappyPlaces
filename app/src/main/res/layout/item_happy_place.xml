<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_item_happy_place"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_place_image"
        android:layout_width="55dp"
        android:layout_height="55dp"
        tools:src="@drawable/ic_launcher_background"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/tv_happy_place_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/civ_place_image"
        app:layout_constraintEnd_toStartOf="@id/btn_delete"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_margin="5dp"
        tools:text="Dummy Title" />
    <TextView
        android:id="@+id/tv_happy_place_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/civ_place_image"
        app:layout_constraintEnd_toStartOf="@id/btn_delete"
        app:layout_constraintTop_toBottomOf="@id/tv_happy_place_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="5dp"
        android:textSize="14sp"
        tools:text="Dummy description" />

    <ImageButton
        android:id="@+id/btn_delete"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_margin="5dp"
        android:elevation="10dp"
        android:src="@drawable/ic_baseline_delete_24"
        android:background="@drawable/image_button_ripple"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/cd_picture_button" />

</androidx.constraintlayout.widget.ConstraintLayout>